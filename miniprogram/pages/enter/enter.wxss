.contain_box {
        width: 100%;
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
}

.main_card {
        width: 600rpx;

}

.card_button {
        width: 100%;
        height: 80rpx;
        background-color: #4e84fe;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 18rpx;
        color: #fff;
        font-size: 28rpx;
        font-weight: bold;
}

.card_input {
        width: 100%;
        height: 100rpx;
        display: flex;
        align-items: center;
}
.card_input input{
        width: 100%;
        height: 80rpx;
        border-bottom: 1rpx solid #eee;
}
.card_title{
        font-size: 30rpx;
        font-weight: bold;
}
.copyright{
        position: fixed;
        left: 0;
        bottom: 10rpx;
        width: 100%;
        text-align: center;
        color: #fff;
        font-size: 28rpx;
}